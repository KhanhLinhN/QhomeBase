				},
				"url": {
					"raw": "{{base_service_url}}/api/buildings/00000000-0000-0000-0000-000000000000",
					"host": [
						"{{base_service_url}}"
					],
					"path": [
						"api",
						"buildings",
						"00000000-0000-0000-0000-000000000000"
					]
				},
				"description": "Test 404 Not Found khi building không tồn tại"
			},
			"response": []
		}
