	"item": [
		{
			"name": "1. Generate Test Token",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"    const response = pm.response.json();",
							"    pm.environment.set('jwt_token', response.token);",
							"    console.log('Token saved:', response.token);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"uid\": \"{{user_id}}\",\n    \"username\": \"{{username}}\",\n    \"tenantId\": \"{{tenant_id}}\",\n    \"roles\": [\"tenant_manager\"],\n    \"permissions\": [\"base.building.delete.request\", \"base.building.delete.approve\"]\n}"
				},
				"url": {
					"raw": "{{iam_service_url}}/api/test/generate-token",
					"host": [
						"{{iam_service_url}}"
					],
					"path": [
						"api",
						"test",
						"generate-token"
					]
				},
				"description": "Tạo JWT token để test các API cần authentication"
			},
			"response": []
		},
		{
			"name": "2. Create Building Deletion Request",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {",
							"    const response = pm.response.json();",
							"    pm.environment.set('building_deletion_request_id', response.id);",
							"    console.log('Building deletion request created:', response.id);",
							"    pm.test('Status is PENDING', function () {",
							"        pm.expect(response.status).to.eql('PENDING');",
							"    });",
							"    pm.test('Tenant ID matches', function () {",
							"        pm.expect(response.tenantId).to.eql(pm.environment.get('tenant_id'));",
							"    });",
							"    pm.test('Building ID matches', function () {",
							"        pm.expect(response.buildingId).to.eql(pm.environment.get('building_id'));",
							"    });",
							"    pm.test('Reason is set', function () {",
							"        pm.expect(response.reason).to.eql('Test deletion request - Building cần được xóa do không còn sử dụng');",
							"    });",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{jwt_token}}"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"tenantId\": \"{{tenant_id}}\",\n    \"buildingId\": \"{{building_id}}\",\n    \"reason\": \"Test deletion request - Building cần được xóa do không còn sử dụng\"\n}"
				},
				"url": {
					"raw": "{{base_service_url}}/api/delete-buildings",
					"host": [
						"{{base_service_url}}"
					],
					"path": [
						"api",
						"delete-buildings"
					]
				},
				"description": "Tạo building deletion request"
			},
			"response": []
		},
